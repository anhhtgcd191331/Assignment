@model IEnumerable<Assignment1.Models.OrderDetail>

@{
    ViewData["Title"] = "Mana";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.UId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.UId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Total)
            </td>
            <td>|
                <a asp-controller="OrderDetails" asp-action="Index" asp-route-id="@item?.Order.Id" class="btn btn-primary">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>